<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kfi.mybatis.ysy.FaqMapper">
	<select id="faqmaxnum" resultType="int">
		select nvl(max(qa_num),1) maxnum from faq
	</select>
	<select id="faqlist" resultType="com.kfi.ysy.faq.vo.FaqVo">
		select * from faq
	</select>
	<insert id="faqinsert" parameterType="com.kfi.ysy.faq.vo.FaqVo">
		insert into faq values(#{qa_num},#{user_num},#{qa_title},#{qa_content},sysdate,#{ref},#{lev},#{step},#{admin_num})
	</insert>
	<select id="faqdetail" parameterType="int" resultType="com.kfi.ysy.faq.vo.FaqVo">
		select * from faq where qa_num=#{qa_num}
	</select>
</mapper>