<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kfi.mybatis.ldk.CommVoteMapper">
	<select id="getMaxNum" resultType="int">
		select NVL(max(mb_num),0) maxnum from comm_vote
	</select>
	<select id="getCount" parameterType="hashmap" resultType="int">
		select NVL(count(mb_num),0) cnt from comm_vote
	</select>
	<insert id="insert" parameterType="commvote">
		insert into comm_vote 
		values(#{vote_num},#{comm_num},#{vote_title},#{vote_info},sysdate,#{vote_end})
	</insert>
	<update id="update" parameterType="commvote">
		update comm_vote 
		<set>
			<if test="mb_title!=null and mb_title!=''">mb_title=#{mb_title},</if>
			<if test="mb_content!=null and mb_content!=''">mb_content=#{mb_content}</if>
		</set>
		where mb_num=#{mb_num} and user_num=#{user_num}
	</update>
	<delete id="delete" parameterType="int">
		delete from comm_vote where mb_num=#{mb_num}
	</delete>
	<select id="list" parameterType="hashmap" resultType="commvote">
		select *
		from
		(
	 	select aa.*,rownum rnum 
	 	from
	 	(
	 		select *
	 		from comm_vote
	 		order by mb_num desc
	 	)aa
		)
		<![CDATA[where rnum>=#{startRow} and rnum<=#{endRow}]]>
	</select>
	<select id="select" parameterType="int" resultType="commvote">
		select * from comm_vote where mb_num=#{mb_num}
	</select>
</mapper>